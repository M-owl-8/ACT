<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Allow Expo to auto-generate the main application manifest -->
    <!-- This file primarily serves to configure manifest merge strategies -->
    
    <!-- Firebase notification color metadata with merge strategy -->
    <application>
        <!-- This meta-data element tells Gradle to use our value instead of Firebase's default -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/notification_icon_color"
            tools:replace="android:resource" />
    </application>

</manifest>